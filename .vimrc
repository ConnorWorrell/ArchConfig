syntax on
set number

set history=500

let $LANG='en'
set langmenu=en

set ruler

set ignorecase
set smartcase
set hlsearch
set magic

set showmatch
set mat=2

syntax enable
set background=dark
set encoding=utf8

set smarttab
set shiftwidth=4
set tabstop=4

set wrap

set number relativenumber
set nu rnu
